@using MvcCV.Models.Entity;
@model List<Tbl_Sertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string timelinecolor = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <a href="/Sertifika/SertifikaEkle/" class="btn btn-primary">Yeni Sertifika Ekle</a><br /><br />
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">

                                    @foreach (var item in Model)
                                    {
                                        if (item.ID % 2 == 0)
                                        {

                                            timelinecolor = "btn btn-danger";

                                        }
                                        else
                                        {

                                            timelinecolor = "btn btn-warning";

                                        }
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="">
                                                <a href="/Sertifika/SertifikaGetir/@item.ID" class="@timelinecolor">
                                                    @item.Tarih
                                                </a>
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->

                                        <!-- timeline item -->
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <!-- END timeline item -->
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>