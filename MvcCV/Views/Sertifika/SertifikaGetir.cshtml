@model MvcCV.Models.Entity.Tbl_Sertifikalarim
@{
    ViewBag.Title = "SertifikaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Sertifika Düzenleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    @Html.Label("Tarih")
    @Html.TextBoxFor(X => X.Tarih, new { @class = "form-control" }) <br />

    @Html.Label("Açıklama")
    @Html.TextBoxFor(X => X.Aciklama, new { @class = "form-control" }) <br />

    <button class="btn btn-success">Güncelle</button>
    <a href="/Sertifika/SertifikaSil/@ViewBag.d" class="btn btn-danger">Sil</a>
</form>

