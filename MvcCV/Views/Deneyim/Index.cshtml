@using MvcCV.Models.Entity;
@model List<Tbl_Deneyimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Deneyim Listesi</h2><br />
<a href="/Deneyim/DeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekle</a>
<br /><br />
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>ALT BAŞLIK</th>
        <th>TARİH</th>
        <th width="11%">İŞLEMLER</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td>@item.AltBaslik</td>
            <td>@item.Tarih</td>
            <td>
                <a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-info btn-sm">
                    <i class="fas fa-pencil-alt">
                        Düzenle
                    </i>
                </a>
                <a href="/Deneyim/DeneyimSil/@item.ID" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash">
                        Sil
                    </i>
                </a>
            </td>

        </tr>
    }

</table>
