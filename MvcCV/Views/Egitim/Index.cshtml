@using MvcCV.Models.Entity;
@model List<Tbl_Egitimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>
<br />
<a href="/Egitim/EgitimEkle/" class="btn btn-primary">Yeni Eğitim Ekle</a>
<br />
<br />
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>ALT BAŞLIK 1</th>
        <th>ALT BAŞLIK 2</th>
        <th>GNO</th>
        <th>TARİH</th>
        <th width="11%">İŞLEMLER</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td>@item.AltBaslik1</td>
            <td>@item.AltBaslik2</td>
            <td>@item.GNO</td>
            <td>@item.Tarih</td>
            <td>
                <a href="/Egitim/EgitimDuzenle/@item.ID" class="btn btn-info btn-sm">
                    <i class="fas fa-pencil-alt">
                        Düzenle
                    </i>
                </a>
                <a href="/Egitim/EgitimSil/@item.ID" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash">
                        Sil
                    </i>
                </a>
            </td>

        </tr>
    }

</table>

