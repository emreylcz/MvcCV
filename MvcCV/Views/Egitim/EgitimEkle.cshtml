@model MvcCV.Models.Entity.Tbl_Egitimlerim
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Eğitim Ekleme Sayfası</h4>
<br />
<form class="form-group" method="post">

    @Html.Label("Başlık")
    @Html.TextBoxFor(X => X.Baslik, new { @class = "form-control" })
    @Html.ValidationMessageFor(X => X.Baslik, "")<br />

    @Html.Label("Alt Başlık 1")
    @Html.TextBoxFor(X => X.AltBaslik1, new { @class = "form-control" }) <br />

    @Html.Label("Alt Başlık 2")
    @Html.TextBoxFor(X => X.AltBaslik2, new { @class = "form-control" }) <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(X => X.Tarih, new { @class = "form-control" }) <br />

    @Html.Label("Genel Not Ortalaması")
    @Html.TextBoxFor(X => X.GNO, new { @class = "form-control" }) <br />

    <button class="btn btn-success">Kaydet</button>

</form>

